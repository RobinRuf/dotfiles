// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "theme": "Solarized Dark",
  "vim_mode": true,
  "ui_font_size": 14,
  "buffer_font_size": 14,
  "buffer_font_family": "BlexMono Nerd Font",
  "relative_line_numbers": true,
  "cursor_blink": false,
  "scrollbar": {
    "show": "never"
  },
  "buffer_line_height": {
    "custom": 1.5
  },
  "terminal": {
    "font_size": 14,
    "line_height": {
      "custom": 1.5
    }
  },
  "formatter": "language_server",
  "format_on_save": "on",
  "scroll_beyond_last_line": "off",
  "experimental.theme_overrides": {
    "background.appearance": "blurred",
    "background": "#02233195", //4c464290
    "hint.background": "#00000030",
    "tab_bar.background": "#00000030",
    "editor.background": "#00000030",
    "editor.gutter.background": "#00000030",
    "terminal.background": "#00000000",
    "toolbar.background": "#00000030",
    "tab.inactive_background": "#00000000",
    "tab.active_background": "#02334990",
    "border": "#00000030",
    "status_bar.background": "#00000030",
    "title_bar.background": "#00000030",
    "panel.background": "#00000030",
    "border.variant": "#00000000",
    "scrollbar.track.border": "#00000000",
    "players": [
      {
        "cursor": "#FFF",
        "selection": "#FFFFFF40"
      }
    ]
  }
}
